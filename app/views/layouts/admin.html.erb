<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-100">
<head>
  <title>LmsTailwind</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

  <%= stylesheet_link_tag 'application.tailwind', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="h-full">


<div>

  <%= render "shared/admin/sidebar" %>

  <div class="md:pl-64 flex flex-col">

    <%= render "shared/admin/header" %>

    <main class="flex-1">
      <div class="py-6">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
          <!--          <h1 class="text-2xl font-semibold text-gray-900">Dashboard</h1>-->
          <%= yield :page_heading %>
        </div>

        <div class="mt-3 mx-8">
          <%= render partial: "shared/components/notification" %>
          <%= render partial: "shared/components/alert" %>
        </div>


        <div class="max-w-7xl mx-auto px-4 sm:px-6 md:px-8">
          <!-- Replace with your content -->
          <div class="py-4">
            <!--            <div class="border-4 border-dashed border-gray-200 rounded-lg h-96">-->
            <%= yield %>
            <!--            </div>-->
          </div>
          <!-- /End replace -->
        </div>
      </div>
    </main>
  </div>
</div>


<script>

    const sidebar = document.getElementById("sidebar");
    const btn_sidebar_open = document.getElementById("btn-sidebar-open");
    btn_sidebar_open.onclick = () => {
        sidebar.classList.remove("hidden")
    }

    const btn_sidebar_close = document.getElementById("btn-sidebar-close");
    btn_sidebar_close.onclick = () => {
        sidebar.classList.add("hidden")
    }

</script>
</body>
</html>


