              <rect x="0" y="0" width="4" height="4" class="text-gray-200" fill="currentColor"/>
            </pattern>
          </defs>
          <rect width="404" height="384" fill="url(#d3eb07ae-5182-43e6-857d-35c643af9034)"/>
        </svg>
      </div>
    </div>

    <div class="relative px-4 sm:px-6 lg:px-8">

      <div class="text-lg max-w-prose mx-auto">
        <h1>
          <!--        <span class="block text-base text-center text-indigo-600 font-semibold tracking-wide uppercase">Introducing</span>-->
          <span class="mt-2 block text-4xl text-center leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl"> <%= @course.name %> </span>
        </h1>
        <p class="mt-8 text-2xl text-gray-500 leading-10 mb-8">
          <%= @course.summary %>
        </p>
      </div>

      <div class="relative">
        <article id="article-desc" class="line-clamp-14 mt-6 prose prose-indigo prose-lg text-gray-500 mx-auto overflow-hidden">
          <%= markdown(@course.description) %>
        </article>

        <div id="article-overlay" class="w-full absolute bottom-0 pt-32  flex justify-center bg-gradient-to-t from-white">
