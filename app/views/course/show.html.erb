<%= content_for(:page_heading) do %>
  <% if current_user && current_user.is_admin %>
    <div class="flex justify-between items-center">
      <h1 class="text-4xl font-bold"> <%= @course.name %>  </h1>
      <div class="flex">
        <%= link_to "Edit", edit_course_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    </div>
  <% else %>
    <!--    <h1 class="text-4xl font-bold"> <%#= @course.name %>  </h1>-->
  <% end %>
<% end %>


