<%= form_with(model: topic) do |form| %>
  <div class="space-y-8 divide-y divide-gray-200">
    <div>
      <div>
        <h3 class="text-2xl leading-8 font-medium text-gray-900">Topic</h3>
        <p class="mt-1 text-sm text-gray-500">This information will be displayed publicly</p>
      </div>


      <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-6">
          <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
          <!--          <label for="username" class="block text-sm font-medium text-gray-700"> Username </label>-->
          <div class="mt-1">
            <%= form.text_field :name, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            <!--            <input type="text" name="street-address" id="street-address" autocomplete="street-address" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md">-->
          </div>
        </div>


        <div class="sm:col-span-6">
          <%= form.label :summary, class: "block text-sm font-medium text-gray-700" %>
          <!--          <label for="about" class="block text-sm font-medium text-gray-700"> About </label>-->
          <div class="mt-1">
            <%= form.text_area :summary, rows: "3", class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md" %>
            <!--            <textarea id="about" name="about" rows="3" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md"></textarea>-->
          </div>
          <p class="mt-2 text-sm text-gray-500">Write a short summary about this topic.</p>
        </div>

        <div class="sm:col-span-6">
          <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
          <!--          <label for="about" class="block text-sm font-medium text-gray-700"> About </label>-->
          <div class="mt-1">
            <%= form.text_area :description, rows: "18", class: "code shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md" %>
            <!--            <textarea id="about" name="about" rows="3" class="shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md"></textarea>-->
          </div>
        </div>


      </div>
    </div>
  </div>

  <div class="pt-5">
    <div class="flex justify-end">
      <%= link_to "Cancel", courses_path, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <!--  <button type="button" class="">Cancel</button>-->
      <!--  <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Save</button>-->
      <%= form.submit class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>

<% end %>

